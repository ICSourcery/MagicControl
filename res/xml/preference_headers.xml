<preference-headers xmlns:android="http://schemas.android.com/apk/res/android" >

    <header
        android:id="@+id/statusbar_battery"
        android:title="@string/battery"
        android:fragment="com.sourcery.magiccontrol.fragments.StatusBarBattery"
        android:icon="@drawable/ic_ics_control_battery"
        android:summary="@string/header_summary_battery" />
    <header
        android:id="@+id/statusbar"
        android:title="@string/header_statusbar" />
    <header
        android:id="@+id/statusbar_clock"
        android:fragment="com.sourcery.magiccontrol.fragments.StatusBarClock"
        android:summary="@string/header_summary_clock"
        android:icon="@drawable/ic_ics_control_clock"
        android:title="@string/clock" />

    <header
        android:id="@+id/user_interface"
	android:fragment="com.sourcery.magiccontrol.fragments.UserInterface"
        android:title="@string/general_ui"
        android:icon="@drawable/ic_ics_control_general_ui"
	android:summary="@string/header_summary_general_ui" />
    
    <header
        android:id="@+id/navbar"
        android:title="@string/header_navbar" />

     <header
        android:id="@+id/nav_bar"
        android:fragment="com.sourcery.magiccontrol.fragments.Navbar"
        android:title="@string/nav_bar"
        android:icon="@drawable/ic_ics_control_navigation_bar"
        android:summary="@string/header_summary_navigation_bar" />

    <header
        android:id="@+id/statusbar_toggles"
        android:fragment="com.sourcery.magiccontrol.fragments.StatusBarToggles"
        android:icon="@drawable/ic_ics_control_toggles"
        android:summary="@string/header_summary_toggles"
        android:title="@string/toggles_layout" />

    <header android:title="@string/lockscreen_options" />

    <header
	android:id="@+id/lockscreens"
	android:fragment="com.sourcery.magiccontrol.fragments.Lockscreens"
	android:title="@string/lockscreen_options"
	android:icon="@drawable/ic_ics_control_lockscreens"
	android:summary="@string/header_summary_lockscreens" />

    <header
 	android:id="@+id/weather"
 	android:fragment="com.sourcery.magiccontrol.fragments.Weather"
        android:title="@string/weather"
        android:summary="@string/header_summary_weather"
        android:icon="@drawable/ic_ics_control_weather" />

     <header
        android:id="@+id/led"
 	android:fragment="com.sourcery.magiccontrol.fragments.LEDControl"
 	android:title="@string/led_options"
 	android:icon="@drawable/ic_ics_control_led"
 	android:summary="@string/header_summary_led" />

</preference-headers>
